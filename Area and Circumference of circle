
#include <stdio.h>

int main()
{
    int rad;
    float PI = 3.14, area, ci;
    printf("\nEnter radius of circle:\n");
    scanf("%d", &rad);
    
    area = PI * rad * rad;
    printf("\nArea of circle is %f\n:", area);
    
    ci = 2 * PI * rad;
    printf("\nCircumference of circle is %f\n:", ci);
}